<div class="blogPost mx-3">
        <div class="post-body">

            <h5 class="post-title">
                {{this.post_title}} 
            </h5>
            <h6 class="post-meta">

            </h6>
                
            <p class="post-content">
                {{this.post_content}}
            </p>


            <div class="post-nav">
                {{#with this as | post |}}
                {{#with session as | session | }}
                {{#if session.loggedIn}}
                {{#if (compare post.user_id session.user_id)}}             
                <button class="btn btn-primary deletePostButton" data-id="{{post.id}}" data-bs-toggle="modal" data-bs-target="#deletePostDialog">‚úñÔ∏è</button>
                                
                <button class="btn btn-primary editPostButton" data-id="{{post.id}}" data-bs-toggle="modal" data-bs-target="#deletePostDialog">‚úèÔ∏è</button>

                {{/if}}
                <button class="btn btn-primary commentPostButton" data-id="{{post.id}}" data-bs-toggle="modal" data-bs-target="#deletePostDialog">üí¨</button>
                {{/if}}
                {{/with}}
                {{/with}}
            </div>
            
        {{#each comments}}
            <div class="comment">

                <h5 class="comment-content">{{this.comment_content}}</h5>
                <p class="comment-meta">-{{user.author_name}} on {{formatTime this.comment_time 'MM/DD/YY h:mm A'}}</p>
         

            {{#with this as | comment |}}
                {{#with ../../session as | session | }}
                    {{#if session.loggedIn}}
                        {{#if (compare comment.user_id session.user_id)}}           
                        <button class="btn btn-primary btn-sm deleteCommentButton" data-id="{{comment.id}}" data-bs-toggle="modal" data-bs-target="#deleteCommentDialog">
                        ‚úñÔ∏è
                        </button>
                        {{/if}}
                    {{/if}}
                {{/with}}
            {{/with}}
            </div>
            
        {{/each}}
        </div>
    </div>
