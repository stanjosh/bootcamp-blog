{{#dataValues}}
    <div class="blogPost">
        <div class="blogPost_header">
            
            <h3 class="blogPost_author">
                {{this.user.dataValues.author_name}} posted
            </h3>
            <h1 class="blogPost_title">
                {{this.post_title}}
            </h1>
            <p class="blogPost_content">
                {{this.post_content}}
            </p>
            <div class="blogPost_meta">
                <span class="blogPost_date">{{formatTime this.post_time 'MMM DD, YYYY [at] h:mm A'}}</span>
            </div>

            <div class="blogPost_nav">
